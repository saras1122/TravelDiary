<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEE7E7"
    android:padding="16dp"
    tools:context=".MainActivity2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titlebar">

        <TextView
            android:id="@+id/pagetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Your Diary"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/pagetitle"
            android:layout_marginLeft="90dp"
            android:id="@+id/bookmark"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/bookmarkwhite"/>
        <ImageButton
            android:layout_width="46dp"
            android:layout_height="36dp"
            android:layout_toLeftOf="@+id/savebutton"
            android:id="@+id/del"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_delete_24"/>
        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/savebutton"
            android:layout_alignParentEnd="true"
            app:tint="#FF0000"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_done_outline_24"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </RelativeLayout>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/location"
        android:hint="Add location"
        android:drawableLeft="@drawable/baseline_add_location_24"
        android:textSize="20sp"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:layout_below="@+id/titlebar"
        android:padding="12dp"
        android:textColorHint="@color/black"
        android:textColor="#FA4A0C"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:textColor="#E75480"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/titlebar"
        android:layout_alignParentRight="true"
        android:backgroundTint="#E75480"
        android:text="date1"
        android:gravity="center"
        android:id="@+id/date1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date1"
        android:orientation="vertical"
        android:id="@+id/noted"
        android:layout_marginTop="18dp"
        android:padding="16dp"
        android:layout_marginVertical="26dp"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/white"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/notes1"
            android:hint="Title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/notes2"
            android:hint="Content"
            android:textSize="20sp"
            android:minLines="10"
            android:gravity="top"
            android:textColorHint="@color/black"
            android:padding="12dp"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/noted"
        android:layout_marginTop="7dp"
        android:layout_above="@+id/groupradio"
        ><com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/image_slider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:iss_auto_cycle="true"
        app:iss_period="1000"
        app:iss_delay="1000"
        app:iss_text_align="CENTER"/>
    </LinearLayout>

    <RadioGroup
        android:layout_marginTop="50dp"
        android:id="@+id/groupradio"
        android:layout_above="@+id/bottomn"
        android:background="@drawable/rounded"
        android:backgroundTint="#90EE90"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <!-- In RadioGroup create the 1 Radio Button-->
        <!-- like this we will add some more Radio Button-->
        <RadioButton
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:id="@+id/radia_id1"
            android:text="Black"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <RadioButton
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/radia_id2"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:text="Green"
            android:textSize="15sp"/>
        <RadioButton
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:textColor="@color/black"
            android:id="@+id/radia_id3"
            android:text="Dkgray"
            android:textSize="15sp"/>

        <RadioButton
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/radia_id4"
            android:textColor="@color/black"
            android:layout_marginLeft="1dp"
            android:text="Red"
            android:textSize="15sp"/>
    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/delete"
        android:textColor="#FF0000"
        android:text="Delete"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:id="@+id/bottomn"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="170dp">
        <ImageButton
            android:src="@drawable/baseline_format_bold_24"
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/bold"/>
        <ImageButton
            android:src="@drawable/baseline_format_italic_24"
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:layout_height="45dp"
            android:layout_toRightOf="@+id/bold"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginLeft="1dp"
            android:id="@+id/italic"/>
        <ImageButton
            android:src="@drawable/baseline_format_underlined_24"
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_height="45dp"
            android:layout_toRightOf="@+id/bold"
            android:layout_marginLeft="1dp"
            android:id="@+id/underline"/>
        <ImageButton
            android:src="@drawable/baseline_disabled_by_default_24"
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_height="45dp"
            android:layout_toRightOf="@+id/underline"
            android:layout_marginLeft="1dp"
            android:id="@+id/defaulted"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded"
        android:layout_alignParentLeft="true"
        android:backgroundTint="@color/white"
        android:layout_alignParentBottom="true">
        <ImageButton
            android:src="@drawable/baseline_image_24"
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_height="45dp"
            android:layout_marginLeft="1dp"
            android:id="@+id/img"/>
        <ImageButton
            android:src="@drawable/baseline_subscriptions_24"
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_height="45dp"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@+id/img"
            android:id="@+id/subs"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:id="@+id/delete1"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_alignParentEnd="true"
            android:src="@drawable/baseline_delete_24"/>
    </LinearLayout>
</RelativeLayout>
